<p id="notice"><%= notice %></p>

<h1>Student Classrooms</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Classroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_classrooms.each do |student_classroom| %>
      <tr>
        <td><%= student_classroom.student_id %></td>
        <td><%= student_classroom.classroom_id %></td>
        <td><%= link_to 'Show', student_classroom %></td>
        <td><%= link_to 'Edit', edit_student_classroom_path(student_classroom) %></td>
        <td><%= link_to 'Destroy', student_classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

